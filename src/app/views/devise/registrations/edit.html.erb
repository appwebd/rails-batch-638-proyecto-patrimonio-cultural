<div class="container">
  <div class="row">
    <div class="col-sm-4 col-md-4 col-lg-4 patrimonial_card">
      <br>
      <h3 class="text-center">Cambio de contraseña</h3>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, disabled: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password,
                      hint: "Escriba su nueva contraseña para cambiarla",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
                      hint: "Necesitamos la contraseña actual, para confirmar los cambios",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Actualizar", class: "btn btn-primary button_rounded" %>
        </div>
      <% end %>

      <div class="text-center">
        <br/><br/>
        <h3>Eliminar mi cuenta</h3>
        <p>
          No esta feliz?
          <%= link_to "Cancelar mi cuenta",
                      registration_path(resource_name),
                      data: { confirm: "Se eliminará toda la información de su cuenta. Esta usted seguro?" },
                      method: :delete
          %>

        </p>
      </div>

    </div>

  <div class="col-sm-8 col-md-8 col-lg-8">
    <br>
    <br>
    <%= imagen_random %>
  </div>
</div>
</div>
