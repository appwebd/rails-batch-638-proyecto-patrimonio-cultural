  <div class="container">
    <div class="row">
      <div class="col-4 patrimonial_card">
        <br>        
          <h3 class="text-center">Registro de usuario</h3>

<!-- # registration_path(resource_name)-->
        <%= simple_form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :nombre,
                        label: 'Nombre',
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: 'name', placeholder: 'nombre' } %>
            <%= f.input :apellidos,
                        label: 'Apellido',
                        required: true,
                        input_html: { autocomplete: 'apellidos', placeholder: 'apellido' } %>
            <%= f.input :email,
                        label: 'Correo electr칩nico',
                        required: true,
                        input_html: { autocomplete: 'email', placeholder: 'correo electr칩nico' } %>
            <%= f.input :password,
                        label: 'Contrase침a',
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: 'Confirme su contrase침a',
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Registrarse", class: "btn btn-primary button_rounded" %>
          </div>
          <br>

        <% end %>

    </div>
    <div class="col">
      <br>
      <br>
        <%= imagen_random %>
    </div>
  </div>
</div>