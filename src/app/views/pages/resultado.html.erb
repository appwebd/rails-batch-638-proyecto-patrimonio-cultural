<div class="container">
  <div class="row">
    <div class="col-sm-4 col-md-4 col-lg-4">
      <br>
      <h1>A dónde vas <br class="mobile-br"> a viajar?</h1><br>
      <br>
      <%
        if !@patrimonio.nil?

           @patrimonio.each do |patrimonio| %>

          <div class="row">
            <div class="col">
              <%= link_to patrimonio,
                          class: "btn button_orange col",
                          title: patrimonio.titulo,
                          target: "_blank" do
              %>
                <span class="col text-truncate">
                      <%= patrimonio.titulo[0..34] %>
                  <% if patrimonio.titulo.length > 34 %>
                        ...
                      <% end %>
                </span>
              <% end %>
            </div>
          </div>

        <% end
           else %>
          <p class="text-justify">No se encontró información para:<br><%= @params[:ubicacion] %></p>
      <% end %>

    </div>

    <div class="col-sm-8 col-md-8 col-lg-8">
      <div id="map"
           class="mapStyle"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

    </div>
  </div>
</div>
